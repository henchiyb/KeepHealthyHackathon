<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/iv_app_name"
        android:src="@drawable/app_name"/>
    <View
        android:layout_width="250dp"
        android:layout_margin="4dp"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"/>
    <View
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="202dp"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/app_icon"
        android:id="@+id/imageView"
        android:layout_weight="0.50" />
    <View
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="Breath Exercise"
            android:drawableLeft="@drawable/icon_button_physical_left_fix"
            android:drawableRight="@drawable/icon_button_physical_right_fix"
            android:id="@+id/bt_breath_exercise"
            android:background="@drawable/custom_button_home"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            />

        <Button
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="Classic Exercise"
            android:drawableLeft="@drawable/icon_button_physical_left_fix"
            android:drawableRight="@drawable/icon_button_physical_right_fix"
            android:background="@drawable/custom_button_home"
            android:gravity="center"
            android:id="@+id/bt_classic_exercise"/>
        <Button
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:id="@+id/bt_setting"
            android:drawableLeft="@drawable/icon_button_physical_left_fix"
            android:drawableRight="@drawable/icon_button_physical_right_fix"
            android:text="Setting"
            android:background="@drawable/custom_button_home"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>